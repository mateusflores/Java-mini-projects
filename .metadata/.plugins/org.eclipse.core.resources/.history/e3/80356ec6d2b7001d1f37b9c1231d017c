
public class FirstJavaProgram {

	public static void main(String[] args) {		
		String word = "macaco";

		
	}

	
	public boolean isPalindrome(String word) {
		char[] arr = word.toCharArray();
		int tam = word.length();
		char[] reverse = null;
		int j = 0;
		
		for (int i=tam-1; i>=0; i--) {
			reverse[i] = arr[j];
			j++;
		}
		
		return true;
	}
}
